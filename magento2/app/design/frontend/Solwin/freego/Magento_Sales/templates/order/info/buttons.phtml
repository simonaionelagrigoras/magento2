<?php  $_order = $block->getOrder() ?>
<form id="order-schedule" action="<?php echo $block->getUrl('appointment/set/schedule')?>">
    <p><label class="schedule-label"><strong><?php echo __('Click here to schedule your Reorder')?></strong></label></p>
    <script>
        require([
            "jquery"
        ], function($){
            $(document).on('click', '.schedule-label', function(){
                $('.schedule').slideToggle(500);
            });
        });
    </script>
    <div class="schedule">

        <div id="callendar-schedule">
            <input type="hidden" class="input-text" id="schedule_order_id" name="order_id" value="<?php echo $_order->getId()?>" aria-required="true" >
            <input type="text" placeholder="Click to select date" class="input-text required-entry" id="calendar_inputField" name="calendar_inputField" aria-required="true" >
            <script>
                require([
                    "jquery",
                    "mage/calendar"
                ], function($){
                    var min = new Date(),
                        max = new Date();
                    min.setDate(min.getDate() + 3);
                    max.setDate(max.getDate() + 90);
                    $("#calendar_inputField").calendar({
                        buttonText: "<?php echo __('Select Date') ?>",
                        minDate: min,
                        maxDate: max,
                        disableFunc: function (date) {
                            var day = date.getDay();
                            if (day==1 || day==7) {
                                return true;
                            }
                        }
                    })
                });
            </script>
        </div>
        <button id="schedule-order" type="submit" title="Schedule Reorder" class="action tocart primary">
            <span><?php echo __('Schedule Reorder')?></span>
        </button>

    </div>
</form>
